.container-fluid

  %h4= @report.name

  %p
    %code { #{@report.filter} } GROUP(#{@report.group}) #{@report.function}

  %p
    = link_to new_report_result_path(@report) do
      %span.fa.fa-fw.fa-terminal
      run now
  %hr

  - if @report.report_results.blank?
    %br
    %br
    .text-info
      This report has never been ran

  - else
    %table.table.table-striped
      %thead
        %tr
          %th{width: 10}
          %th Date
          %th.text-center{width: 100} Count
          %th.text-center{width: 100} Elapsed
      %tbody
        - @report.report_results.order(created_at: :desc).limit(10).each do |report_result|
          %tr
            %td.text-center
              - if report_result.status === 'complete'
                %span.fa.fa-fw.fa-circle.text-success{title: 'Complete'}
              - elsif report_result.status === 'running'
                %span.fa.fa-fw.fa-circle.text-info{title: 'Currently Running'}
              - else
                %span.fa.fa-fw.fa-circle-o.text-muted{title: report_result.status}
            %td
              = link_to report_result_path(@report, report_result) do
                = report_result.created_at
            - if report_result.complete?
              %td.text-center
                = number_with_delimiter report_result.count
              %td.text-center
                = number_with_precision report_result.elapsed / 1000.0, delimiter: ',', precision: 2
                %span.text-muted ms
            - else
              %td.text-center.text-muted{colspan: 2}
                n/a

